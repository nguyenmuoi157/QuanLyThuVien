            <StackPanel>
                <materialDesign:Card>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Grid Height="60">
                                    <TextBlock Margin="10 0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Phần thứ nhất" FontWeight="Bold" Foreground="#535351" FontSize="14" FontFamily="Open Sans, sans-serif"></TextBlock>
                                </Grid>
                                <Separator Background="WhiteSmoke"/>
                                <StackPanel Margin="10 0">
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Họ Tên (*)"/>
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Số điện thoại"/>
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Email"/>
                                    <ComboBox Margin="10 15" materialDesign:HintAssist.Hint="Giới Tính">
                                        <ComboBoxItem>Nam</ComboBoxItem>
                                        <ComboBoxItem>Nữ</ComboBoxItem>
                                    </ComboBox>
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Chứng Minh Thư"/>

                                </StackPanel>

                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <Grid Height="60">
                                    <TextBlock Margin="10 0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Phần Thứ Hai" FontWeight="Bold" Foreground="#535351" FontSize="14" FontFamily="Open Sans, sans-serif"></TextBlock>
                                </Grid>
                                <Separator Background="WhiteSmoke"/>
                                <StackPanel Margin="10 0">
                                    <DatePicker Margin="10 15" Name="LocaleDatePicker" materialDesign:HintAssist.Hint="Ngày Sinh" />
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Nghề Nghiệp"/>
                                    <TextBox Margin="10 15" materialDesign:HintAssist.Hint="Địa Chỉ"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Margin="10 15" Background="{x:Null}" BorderBrush="Gray" Height="45">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="UploadNetwork" Foreground="Gray"/>
                                                <TextBlock Foreground="Gray" Text="Chọn Ảnh Đại Diện"/>
                                            </StackPanel>
                                        </Button>
                                        <Image Margin="10 15" Height="150" Source="ResoucesXAML\no_img.jpg" />
                                    </StackPanel>
                                    <StackPanel Margin="10 30" Orientation="Horizontal">
                                        <Button Width="100" Margin="5" Content="Thêm"/>
                                        <Button Width="100" Margin="5" Content="Sửa"/>
                                        <Button Width="100" Margin="5" Content="Xoá"/>
                                    </StackPanel>

                                </StackPanel>

                            </StackPanel>
                        </Grid>
                        <ScrollViewer Grid.Row="1">
                            <ListView Margin="10">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="STT"></GridViewColumn>
                                        <GridViewColumn Header="Mã Số Thẻ"></GridViewColumn>
                                        <GridViewColumn Header="Họ Tên"></GridViewColumn>
                                        <GridViewColumn Header="Ngày Sinh"></GridViewColumn>
                                        <GridViewColumn Header="Giới Tính"></GridViewColumn>
                                        <GridViewColumn Header="CMTND"></GridViewColumn>
                                        <GridViewColumn Header="Số Điện Thoại"></GridViewColumn>
                                        <GridViewColumn Header="Email"></GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </ScrollViewer>

                    </Grid>

                </materialDesign:Card>
            </StackPanel>
        </Grid>

