<Page x:Class="QuanLyThuVien.PageViTri"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyThuVien"
      mc:Ignorable="d" 
    Name="PViTri"
      Title="PageViTri"
      DataContext="{StaticResource ViTriViewModel}"
       xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Uid="6">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding PLoadCommand}" CommandParameter="{Binding  ElementName=PViTri}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <materialDesign:TransitioningContent x:Name="TransitionSlide" OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft, Duration=0:0:0.5}">
        <materialDesign:Card>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Grid Height="60">
                            <TextBlock Margin="10 0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="" FontWeight="Bold" Foreground="#535351" FontSize="14" FontFamily="Open Sans, sans-serif"></TextBlock>
                        </Grid>
                        <Separator Background="WhiteSmoke"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 15" materialDesign:HintAssist.Hint="Số Giá Sách (*)" Text="{Binding TxtViTri,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10 15" materialDesign:HintAssist.Hint="Sức Chứa (*)" Text="{Binding TxtSucChua,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Grid Height="60">
                            <TextBlock Margin="10 0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="" FontWeight="Bold" Foreground="#535351" FontSize="14" FontFamily="Open Sans, sans-serif"/>
                        </Grid>
                        <Separator Background="WhiteSmoke"/>
                        <TextBlock Margin="10 15"/>
                        <StackPanel Orientation="Horizontal"  Margin="10 30">
                            <Button Margin="5" Width="100" Content="Thêm" Command="{Binding AddCommmand}"/>
                            <Button Margin="5" Width="100" Content="Sửa" Command="{Binding EditCommmand}"/>
                            <Button Margin="5" Width="100" Content="Xoá" Command="{Binding DeleteCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <ScrollViewer>
                    <ListView Margin="10" ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã Vị Trí" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Số Giá Sách" DisplayMemberBinding="{Binding SoGiaSach}"/>
                                <GridViewColumn Header="Sức Chứa" DisplayMemberBinding="{Binding SucChua}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </StackPanel>
        </materialDesign:Card>
    </materialDesign:TransitioningContent>
</Page>
